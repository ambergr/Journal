<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputActivity">


    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:hint="@string/Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="content"
        android:inputType="textMultiLine"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <Button
        android:id="@+id/button"
        android:layout_width="243dp"
        android:layout_height="38dp"
        android:layout_gravity="bottom|center_horizontal|fill_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:padding="8dp"
        android:background="@color/colorPrimary"
        android:text="Submit entry"
        android:onClick="OnClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        app:layout_constraintVertical_bias="0.948" />

    <HorizontalScrollView
        android:id="@+id/scrollView2"
        android:layout_width="395dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/neutral"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:tag="neutral"
                app:srcCompat="@drawable/neutral" />

            <ImageView
                android:id="@+id/happytoung"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:tag="happytounge"
                app:srcCompat="@drawable/happytounge" />

            <ImageView
                android:id="@+id/angry"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:tag="angry"
                app:srcCompat="@drawable/angry" />

            <ImageView
                android:id="@+id/dead"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:tag="dead"
                app:srcCompat="@drawable/dead" />

            <ImageView
                android:id="@+id/smile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:tag="smile"
                app:srcCompat="@drawable/smile" />

            <ImageView
                android:id="@+id/bigsmile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:tag="bigsmile"
                app:srcCompat="@drawable/bigsmile" />

            <ImageView
                android:id="@+id/love"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:tag="love"
                app:srcCompat="@drawable/love" />

            <ImageView
                android:id="@+id/sad"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:tag="sad"
                app:srcCompat="@drawable/sad" />

            <ImageView
                android:id="@+id/sadcrying"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:tag="sadcrying"
                app:srcCompat="@drawable/sadcrying" />

            <ImageView
                android:id="@+id/sadtear"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:tag="sadtear"
                app:srcCompat="@drawable/sadtear" />

            <ImageView
                android:id="@+id/trouble"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:tag="trouble"
                app:srcCompat="@drawable/trouble" />

            <ImageView
                android:id="@+id/successful"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:tag="successful"
                app:srcCompat="@drawable/successful" />

            <ImageView
                android:id="@+id/tired"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:tag="tired"
                app:srcCompat="@drawable/tired" />
        </LinearLayout>
    </HorizontalScrollView>

</android.support.constraint.ConstraintLayout>